<div class="container-fluid p-4">
    <!-- Student Name Heading -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-center">{{student.name}}</h1>
        </div>
    </div>

    <!-- Fees and Due Cards -->
    <div class="row mb-4">
        <!-- Fees Paid Card -->
        <div class="col-lg-6 col-md-6 col-sm-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Fees Paid</h5>
                    <p class="card-text display-4 text-success">0</p>
                </div>
            </div>
        </div>
        <!-- Due to Paid Card -->
        <div class="col-lg-6 col-md-6 col-sm-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Due to Paid</h5>
                    <p class="card-text display-4 text-danger">0</p>
                </div>
            </div>
        </div>
    </div>

 

    <!-- Fees Paid Form -->
    <div class="row mb-4">
        <h1>Add Fees</h1>
        <div class="col-12">
            <form id="addStudentForm" method="post" action="/fees-paid" class="bg-light p-4 border rounded">
                <div class="form-group mb-3">
                    <input type="text" value="{{student._id}}" name="_id" hidden>
                    <label for="studentId" class="form-label">Date</label>
                    <input type="date" name="date" id="studentId" class="form-control" required>
                </div>
                 <div class="form-group mb-3">
                   
                    <label for="studentId" class="form-label">Month</label>
                   <select name="month" id="" >
                    <option value="january">january</option>
                    <option value="february">february</option>
                    <option value="march">march</option>
                    <option value="april">april</option>
                    <option value="may">may</option>
                    <option value="june">june</option>
                   </select>
                </div>
                <div class="form-group mb-3">
                    <label for="studentName" class="form-label">Amount</label>
                    <input type="number" name="amount" id="studentName" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>

    <h1>Fees Paided</h1>
     <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>date</th>
                <th>Amount</th>
                <th>month</th>
              </tr>
            </thead>   
  <tbody>
   {{#each student.fees}}
    <tr>
   <td>{{this.date}}</td>
    <td>{{this.month}}</td>
     <td>{{this.amount}}</td>
    </tr>

{{/each}}
  </tbody>

              
             

           
          </table>
        </div>
</div>